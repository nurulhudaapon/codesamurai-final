{
  "name": "ecosync",
  "description": "A monorepo for the Ecosync - an app to to bridge the gaps, streamline processes, and enhance accountability through technological innovation.",
  "version": "0.0.0-alpha-0",
  "scripts": {
    "start:container": "docker compose up -d",
    "reset": "docker compose up -d && cd packages/db && prisma migrate reset --force",
    "app": "npm start -w @ecosync/app",
    "app:web": "npm run web -w @ecosync/app",
    "dev": "npm run dev -w @ecosync/web"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/uuid": "^9.0.8",
    "bun-types": "latest",
    "prettier": "^3.2.5",
    "typescript": "^5.0.0",
    "supabase": "^1.142.2"
  },
  "dependencies": {
    "@supabase/postgrest-js": "^1.11.0",
    "ajv": "^8.13.0",
    "clsx": "^2.1.0",
    "expo-image": "~1.10.6",
    "expo-secure-store": "^13.0.1",
    "kleur": "^4.1.5",
    "lodash": "^4.17.21",
    "lucide-react-native": "^0.378.0",
    "next-auth": "^4.24.7",
    "react-hot-toast": "^2.4.1",
    "tailwind-merge": "^2.2.2",
    "uuid": "^9.0.1"
  }
}
